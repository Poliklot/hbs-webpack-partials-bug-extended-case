<script type="application/ld+json">
	{
	  "@context": "https://schema.org",
	  "@type": "{{item.type}}",
	  "name": "{{item.name}}"
	  {{#if item.url}},
	  "url": "{{item.url}}"{{/if}}
	  {{#if item.image}},
	  "image": "{{item.image}}"{{/if}},
	  "aggregateRating": {
	    "@type": "AggregateRating",
	    "ratingValue": "{{ratingValue}}",
	    "reviewCount": "{{reviewCount}}"
	    {{#if bestRating}},
	    "bestRating": "{{bestRating}}"{{/if}}
	    {{#if worstRating}},
	    "worstRating": "{{worstRating}}"{{/if}}
	  }
	}
</script>
